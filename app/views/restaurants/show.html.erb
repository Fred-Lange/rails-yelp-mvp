<div class="container">
  <h1>Show for each restaurant</h1>
  <br>
  <h2><%= @restaurant.name %></h2>
  <p><%= @restaurant.address %></p>
  <p><%= @restaurant.phone_number %></p>
  <p><%= @restaurant.category %></p>
  <p><%= @restaurant.comments %></p>
  <br>
  <ul class="list-group">
    <% @restaurant.reviews.each do |review| %>
      <li class="list-group-item"><%= review.content %></li>
    <% end %>
  </ul>

  <%= link_to 'Back', restaurants_path, class: "btn btn-secondary" %>

  <%= link_to 'Leave a review', new_restaurant_review_path(@restaurant), class: "btn btn-secondary"  %>

</div>
