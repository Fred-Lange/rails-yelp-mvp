<div class="container" class="flexArea" style="display: flex; flex-direction: column; justify-content: space-between; height:500px;width:800px">
<h1>Index of all restaurants</h1>
<ul>
  <% @restaurants.each do |restaurant| %>
    <li><%= restaurant.name %> <%= link_to "See details", restaurant_path(restaurant), class: "btn btn-primary"%>
</li>
  <% end %>
</ul>
</div>
